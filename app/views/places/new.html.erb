<h1>New Place</h1>

<%= form_with model: @place, url: places_path, method: "post", local: true do |form| %>
  <div>
    <%= form.label :name, "Place Name" %><br>
    <%= form.text_field :name, required: true %>
  </div>

  <div>
    <%= form.submit "Create Place" %>
  </div>
<% end %>

<%= link_to "Back to Places", places_path %>
